<h3>Given Away Books</h3>
<table>
    <thead>
        <th>Book Title</th>
        <th>Given To</th>
    </thead>
    <tr>
<% @books.each do |bk| %>
    <td>   <%=bk.title%> </td>
    <td>   Given to 
        <% @user = User.find_by(id: bk.user_id) %>
        <%= @user.name %> </td>
    <td class="button"> <%= link_to "RETURNED", returned_path(id: bk.id) %> </td>
        <% if bk.due_date < Time.zone.now %>
            <td class="button"> <%= link_to "SURCHARGE", surcharge_path(id: bk.id) %></td>
        <% end %>
    </tr>
    </tbody>
    </table>
<% end %>
