<div class="row">
  <div class="small-6 columns">
<%= provide(:title, "Add book")  %>
<%= form_for Book.new  do |f| %>
<%= f.label :title%>
<%= f.text_field :title%>
<%= f.label :author%>
<%= f.text_area :author%>
<%= f.label :description%>
<%= f.text_area :description %>

<%= f.label :quantity %>
<%= f.number_field :quantity %>

<%= f.label :category %>
<%= f.text_field :category %>
<%= f.submit %>
<% end %>
  </div>
  </div>
